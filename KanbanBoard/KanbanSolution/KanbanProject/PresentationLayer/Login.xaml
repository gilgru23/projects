<Window x:Class="KanbanProject.PresentationLayer.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanProject"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" Background="Bisque">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="50,66,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="50,114,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtUser" Text="{Binding UserName}" HorizontalAlignment="Left" Height="23" Margin="132,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TxtUser_TextChanged"/>
        <TextBox Name="pswd" Text="{Binding PWD}" HorizontalAlignment="Left" Margin="132,122,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Name="Login1" Content="Login" HorizontalAlignment="Left" Margin="111,200,0,0" VerticalAlignment="Top" Width="75" Click="Login_Click"/>
        <Button Name="SignUp11" Content="SignUp" HorizontalAlignment="Left" Margin="111,163,0,0" VerticalAlignment="Top" Width="75" Click="SignUp_Click"/>

    </Grid>
</Window>