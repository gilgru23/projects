<Window x:Class="KanbanProject.PresentationLayer.EditColumnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanProject.PresentationLayer"
        mc:Ignorable="d"
        Title="{Binding WinTitle}" Height="189" Width="229">
    <Grid Margin="0,0,2,2">
        <Label Content="Enter new column name" HorizontalAlignment="Left" Height="25" Margin="19,28,0,0" VerticalAlignment="Top" Width="142"/>
        <TextBox x:Name="colName" HorizontalAlignment="Left" Height="19" Margin="22,58,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="162"/>
        <Button Content="OK" HorizontalAlignment="Left" Height="32" Margin="105,95,0,0" VerticalAlignment="Top" Width="79" Click="Button_Click"/>
    </Grid>
</Window>
